<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#182636"
        android:id="@+id/frameLayout">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="New User Registration"
            android:textSize="22dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </FrameLayout>

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:hint="Username (Eg: Apollo11)"
            android:inputType="textPersonName"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:alpha="0.50"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            android:paddingLeft="16dp"
            >
        </EditText>

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/name"
            android:textSize="12sp"
            android:hint="Email (Eg: example@gmail.com)"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:alpha="0.50"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            >
        </EditText>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/email"
            android:textSize="14sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:alpha="0.50"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="12dp"
            android:paddingLeft="16dp"
            >
        </EditText>

        <EditText
            android:id="@+id/cfmPwd"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_below="@+id/pwd"
            android:textSize="14sp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:alpha="0.50"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="12dp"
            android:paddingLeft="16dp"
            >
        </EditText>

        <Button
            android:id="@+id/done"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cfmPwd"
            android:text="Register"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/roundededgebtn"
            />
</RelativeLayout>