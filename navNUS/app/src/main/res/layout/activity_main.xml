<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#182636"
        android:id="@+id/frameLayout">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Navigate"
            android:textSize="22dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="8dp"
        >
        <AutoCompleteTextView
            android:id="@+id/etFrom"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:ems="10"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:hint="@string/main_activity_from"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:alpha="0.85"
            >

            <requestFocus />
        </AutoCompleteTextView >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="8dp"
        >
        <AutoCompleteTextView
            android:id="@+id/etTo"
            android:hint="@string/main_activity_to"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:ems="10"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:alpha="0.85" />

    </LinearLayout>

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:text="@string/main_activity_button_search_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/roundededgebtn"
        android:onClick="button_search_click" />

    <TextView
        android:id="@+id/textview_debug_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/main_activity_debug_text"
        android:textColor="#FFF"
        android:layout_below="@+id/button_search"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_edittext"
        android:alpha="0.85"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textview_debug_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="#FFF"
        android:layout_below="@+id/textview_debug_label"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_edittext"
        android:alpha="0.85"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_button_view_map"
        android:id="@+id/button_view_map"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:singleLine="false"
        android:visibility="gone"
        android:onClick="button_view_map_click"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/roundededgebtn"/>

